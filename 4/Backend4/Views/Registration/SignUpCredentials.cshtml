@model Backend4.Models.SignUpCredentialsModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="SignUpCredentials" class="form-horizontal">
    <input type="hidden" asp-for="@Model.FirstName" />
    <input type="hidden" asp-for="@Model.LastName" />
    <input type="hidden" asp-for="@Model.Day" />
    <input type="hidden" asp-for="@Model.Month" />
    <input type="hidden" asp-for="@Model.Year" />
    <input type="hidden" asp-for="@Model.Gender" />
    <input type="hidden" asp-for="@Model.Existed" />

    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>

        <div class="col-md-10">
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="@Model.Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Password</label>

        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Confirm password</label>

        <div class="col-md-10">
            <input asp-for="PasswordConfirm" type="password" class="form-control" />
            <span asp-validation-for="@Model.PasswordConfirm"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
                <label asp-for="@Model.Remembered">
                    <input asp-for="@Model.Remembered" type="checkbox" />
                    Remember?
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Complete sign up</button>
        </div>
    </div>
</form>